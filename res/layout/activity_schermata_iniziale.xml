<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/backgrounset" >

    <ImageView
        android:id="@+id/logogtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:src="@drawable/sfondogtt" />

    <Button
        android:id="@+id/btnIniziale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logogtt"
        android:layout_centerInParent="true"
        android:background="#97000066"
		android:padding="10dp"
        android:text="Comincia a giocare!"
        android:textColor="#FFF" />

</RelativeLayout>
